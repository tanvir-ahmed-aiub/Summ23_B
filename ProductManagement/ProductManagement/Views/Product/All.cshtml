@model List<ProductManagement.Models.ProductDTO>
@{
    ViewBag.Title = "All";
    Layout = "~/Views/Shared/_OuterLayout.cshtml";
}

<h2>All</h2>
@if (TempData["Msg"] != null) { 
    <p class="alert alert-info">@TempData["Msg"]</p>
}
<a href="" class="btn btn-success">Create</a>
<table class="table table-bordered">
    <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Qty</th>
        <th>Description</th>
        <th></th>
    </tr>
    @foreach (var item in Model) { 
        <tr>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td>@item.Qty</td>
            <td>@item.Description</td>
            <td><a href="/Product/Add/@item.Id" class="btn btn-success">Add to Cart</td>
            @*<td><a href="/Product/Edit/@item.Id" class="btn btn-warning">Edit</a></td>
            <td><a href="/Product/Delete/@item.Id" class="btn btn-danger">Delete</a></td>*@
        </tr>
    }
</table>

