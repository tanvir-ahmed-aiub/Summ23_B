@model List<ProductManagement.Models.OrderDTO>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_OuterLayout.cshtml";
}

<h2>Index</h2>
@if (TempData["Msg"] != null) { 
    <p class="alert alert-info">@TempData["Msg"]</p>
}
<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Total</th>
        <th>Date</th>
        <th>Status</th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var item in Model) { 
        <tr>
            <td>@item.Id</td>
            <td>@item.Total</td>
            <td>@item.Date</td>
            <td>@item.Status</td>
            <td><a href="/Order/Details/@item.Id">Details</a></td>
            <td><a href="/Order/Decline/@item.Id">Decline</a></td>
        </tr>
    }
</table>

